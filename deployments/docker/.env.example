# ChronoGuard Docker Environment Configuration

# Database Configuration
DB_PASSWORD=your-secure-database-password-here
POSTGRES_DB=chronoguard
POSTGRES_USER=chronoguard

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password-here

# Application Security
SECRET_KEY=your-very-secure-secret-key-at-least-32-characters-long
JWT_SECRET_KEY=your-jwt-secret-key-for-token-signing

# Grafana Configuration
GRAFANA_PASSWORD=your-grafana-admin-password

# Feature Flags Environment Variables
CHRONOGUARD_FEATURE_S3_STORAGE__ENABLED=false
CHRONOGUARD_FEATURE_LOCAL_FILE_STORAGE__ENABLED=true
CHRONOGUARD_FEATURE_OPENTELEMETRY_TRACING__ENABLED=true
CHRONOGUARD_FEATURE_PROMETHEUS_METRICS__ENABLED=true
CHRONOGUARD_FEATURE_JAEGER_EXPORTER__ENABLED=true
CHRONOGUARD_FEATURE_MTLS_AUTHENTICATION__ENABLED=true
CHRONOGUARD_FEATURE_ENVOY_PROXY__ENABLED=true
CHRONOGUARD_FEATURE_OPA_AUTHORIZATION__ENABLED=true

# External Service URLs
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://jaeger:4317
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=http://prometheus:9090

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/chronoguard.crt
SSL_KEY_PATH=/etc/nginx/ssl/chronoguard.key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Tuning
UVICORN_WORKERS=4
POSTGRES_MAX_CONNECTIONS=100
REDIS_MAX_CONNECTIONS=50

# Security Configuration
CORS_ORIGINS=["http://localhost:3000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1", "chronoguard.local"]

# Development Only (DO NOT use in production)
DEBUG=false
DEVELOPMENT_MODE=false