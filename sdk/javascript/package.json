{
  "name": "@chronoguard/sdk",
  "version": "1.0.0",
  "description": "Official TypeScript/JavaScript SDK for ChronoGuard - Temporal Access Control System",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "npm run build && npm run test",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "chronoguard",
    "temporal",
    "access-control",
    "audit",
    "policy",
    "agent",
    "typescript",
    "sdk"
  ],
  "author": "ChronoGuard Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chronoguard/chronoguard.git",
    "directory": "sdk/javascript"
  },
  "bugs": {
    "url": "https://github.com/chronoguard/chronoguard/issues"
  },
  "homepage": "https://github.com/chronoguard/chronoguard#readme",
  "dependencies": {
    "axios": "^1.6.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.7",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
