{
  "name": "ChronoGuard Demo Environment",
  "dockerComposeFile": "../docker-compose.demo.yml",
  "service": "workspace",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",

  "forwardPorts": [3000, 8000, 8080, 8181, 9901],

  "portsAttributes": {
    "3000": {
      "label": "Dashboard",
      "onAutoForward": "openBrowser"
    },
    "8000": {
      "label": "API & Documentation",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "ChronoGuard Proxy (Envoy)",
      "onAutoForward": "silent"
    },
    "8181": {
      "label": "OPA Policy Engine",
      "onAutoForward": "silent"
    },
    "9901": {
      "label": "Envoy Admin",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "bash .devcontainer/setup-demo.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "tsandall.opa",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "python.defaultInterpreterPath": "/usr/local/bin/python3",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "files.exclude": {
          "**/__pycache__": true,
          "**/.pytest_cache": true,
          "**/*.pyc": true
        }
      }
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true
    }
  },

  "remoteUser": "vscode"
}
